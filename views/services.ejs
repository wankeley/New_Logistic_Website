<%- include('partials/header') %>

    <!-- Page Hero -->
    <section class="hero" style="padding: 6rem 0;">
        <img src="https://images.unsplash.com/photo-1578575437130-527eed3abbec?w=1600&q=80" alt="Services"
            class="hero-bg">
        <div class="hero-overlay"></div>
        <div class="container">
            <div class="hero-content text-center" style="max-width: 100%;">
                <h1 class="text-white">Our Services</h1>
                <p style="max-width: 600px; margin: 0 auto;">Comprehensive logistics solutions tailored to your business
                    needs. From air to sea, we've got you covered.</p>
            </div>
        </div>
    </section>

    <!-- Services Grid -->
    <section class="section-padding">
        <div class="container">
            <div class="grid-2" style="gap: 3rem;">
                <!-- Air Freight -->
                <div class="card hover-card" style="display: flex; gap: 2rem; align-items: flex-start;">
                    <div class="icon-box" style="flex-shrink: 0;">
                        <i class="fas fa-plane"></i>
                    </div>
                    <div>
                        <h3>Air Freight</h3>
                        <p>Express air cargo services for time-critical shipments. Our extensive network of airline
                            partners ensures your goods reach their destination quickly and safely.</p>
                        <ul style="margin-top: 1rem;">
                            <li style="margin-bottom: 0.5rem;"><i class="fas fa-check"
                                    style="color: var(--primary-color); margin-right: 8px;"></i> Express delivery
                                options</li>
                            <li style="margin-bottom: 0.5rem;"><i class="fas fa-check"
                                    style="color: var(--primary-color); margin-right: 8px;"></i> Door-to-door service
                            </li>
                            <li><i class="fas fa-check" style="color: var(--primary-color); margin-right: 8px;"></i>
                                Real-time tracking</li>
                        </ul>
                    </div>
                </div>

                <!-- Sea Freight -->
                <div class="card hover-card" style="display: flex; gap: 2rem; align-items: flex-start;">
                    <div class="icon-box" style="flex-shrink: 0;">
                        <i class="fas fa-ship"></i>
                    </div>
                    <div>
                        <h3>Sea Freight</h3>
                        <p>Cost-effective ocean freight solutions for bulk cargo and containers. Direct routes to major
                            ports in Ghana, Europe, Asia, and the Americas.</p>
                        <ul style="margin-top: 1rem;">
                            <li style="margin-bottom: 0.5rem;"><i class="fas fa-check"
                                    style="color: var(--primary-color); margin-right: 8px;"></i> FCL & LCL shipping</li>
                            <li style="margin-bottom: 0.5rem;"><i class="fas fa-check"
                                    style="color: var(--primary-color); margin-right: 8px;"></i> Port-to-port delivery
                            </li>
                            <li><i class="fas fa-check" style="color: var(--primary-color); margin-right: 8px;"></i>
                                Customs clearance</li>
                        </ul>
                    </div>
                </div>

                <!-- Road Transport -->
                <div class="card hover-card" style="display: flex; gap: 2rem; align-items: flex-start;">
                    <div class="icon-box" style="flex-shrink: 0;">
                        <i class="fas fa-truck"></i>
                    </div>
                    <div>
                        <h3>Road Transport</h3>
                        <p>Efficient trucking services covering Ghana and West Africa. Our modern fleet ensures safe and
                            timely delivery of your goods.</p>
                        <ul style="margin-top: 1rem;">
                            <li style="margin-bottom: 0.5rem;"><i class="fas fa-check"
                                    style="color: var(--primary-color); margin-right: 8px;"></i> Cross-border transport
                            </li>
                            <li style="margin-bottom: 0.5rem;"><i class="fas fa-check"
                                    style="color: var(--primary-color); margin-right: 8px;"></i> GPS-tracked vehicles
                            </li>
                            <li><i class="fas fa-check" style="color: var(--primary-color); margin-right: 8px;"></i>
                                Flexible scheduling</li>
                        </ul>
                    </div>
                </div>

                <!-- Warehousing -->
                <div class="card hover-card" style="display: flex; gap: 2rem; align-items: flex-start;">
                    <div class="icon-box" style="flex-shrink: 0;">
                        <i class="fas fa-warehouse"></i>
                    </div>
                    <div>
                        <h3>Warehousing</h3>
                        <p>Secure storage facilities strategically located for optimal distribution. Climate-controlled
                            options available for sensitive goods.</p>
                        <ul style="margin-top: 1rem;">
                            <li style="margin-bottom: 0.5rem;"><i class="fas fa-check"
                                    style="color: var(--primary-color); margin-right: 8px;"></i> 24/7 security</li>
                            <li style="margin-bottom: 0.5rem;"><i class="fas fa-check"
                                    style="color: var(--primary-color); margin-right: 8px;"></i> Inventory management
                            </li>
                            <li><i class="fas fa-check" style="color: var(--primary-color); margin-right: 8px;"></i>
                                Pick & pack services</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Dynamic Services from Admin -->
    <% if (typeof services !=='undefined' && services && services.length> 0) { %>
        <section class="section-padding" style="background: #f1f5f9;">
            <div class="container">
                <div class="text-center mb-4">
                    <p class="text-primary"
                        style="font-weight: 600; text-transform: uppercase; letter-spacing: 2px; margin-bottom: 0.5rem;">
                        Additional Services</p>
                    <h2>Custom Solutions</h2>
                </div>
                <div class="grid-3">
                    <% services.forEach(service=> { %>
                        <div class="card hover-card text-center">
                            <% if(service.image) { %>
                                <img src="<%= service.image %>" alt="<%= service.title %>"
                                    style="width:100%; height:180px; object-fit:cover; border-radius: var(--border-radius-sm); margin-bottom:1.5rem;">
                                <% } else { %>
                                    <div class="icon-box" style="margin: 0 auto 1.5rem;">
                                        <i class="fas fa-box"></i>
                                    </div>
                                    <% } %>
                                        <h3>
                                            <%= service.title %>
                                        </h3>
                                        <p>
                                            <%= service.description %>
                                        </p>
                        </div>
                        <% }); %>
                </div>
            </div>
        </section>
        <% } %>

            <!-- CTA -->
            <section style="background: var(--gradient-dark); padding: 5rem 0;">
                <div class="container text-center">
                    <h2 class="text-white">Need a Custom Solution?</h2>
                    <p style="color: #94a3b8; max-width: 500px; margin: 0 auto 2rem;">Contact our team to discuss your
                        specific logistics requirements.</p>
                    <a href="/quote" class="btn btn-primary"><i class="fas fa-paper-plane"></i> Get a Quote</a>
                </div>
            </section>

            <%- include('partials/footer') %>