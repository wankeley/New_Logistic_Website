<%- include('layout', { body: ` <section class="hero"
    style="padding: 4rem 0; min-height: 40vh; background-image: url('https://source.unsplash.com/1600x900/?logistics,truck');">
    <div class="container">
        <h1>Our Services</h1>
        <p>Comprehensive logistics solutions designed for your business needs.</p>
    </div>
    </section>

    <section>
        <div class="container">
            <div class="grid-3">
                <% if (services && services.length> 0) { %>
                    <% services.forEach(service=> { %>
                        <div class="service-card">
                            <% if(service.image) { %>
                                <img src="<%= service.image %>" alt="<%= service.title %>"
                                    style="width:100%; height:200px; object-fit:cover; border-radius:8px; margin-bottom:1rem;">
                                <% } else { %>
                                    <div
                                        style="width:100%; height:200px; background:#f1f5f9; border-radius:8px; margin-bottom:1rem; display:flex; align-items:center; justify-content:center;">
                                        <i class="fas fa-box fa-3x" style="color:#cbd5e1"></i>
                                    </div>
                                    <% } %>
                                        <h3>
                                            <%= service.title %>
                                        </h3>
                                        <p>
                                            <%= service.description %>
                                        </p>
                        </div>
                        <% }); %>
                            <% } else { %>
                                <div class="service-card">
                                    <i class="fas fa-plane service-icon"></i>
                                    <h3>Air Freight</h3>
                                    <p>Express delivery for urgent shipments worldwide.</p>
                                </div>
                                <div class="service-card">
                                    <i class="fas fa-ship service-icon"></i>
                                    <h3>Ocean Freight</h3>
                                    <p>FCL and LCL shipping solutions for reduced costs.</p>
                                </div>
                                <div class="service-card">
                                    <i class="fas fa-truck service-icon"></i>
                                    <h3>Road Transport</h3>
                                    <p>Reliable trucking across Ghana and West Africa.</p>
                                </div>
                                <div class="service-card">
                                    <i class="fas fa-warehouse service-icon"></i>
                                    <h3>Warehousing</h3>
                                    <p>Secure storage facilities with inventory management.</p>
                                </div>
                                <div class="service-card">
                                    <i class="fas fa-globe-africa service-icon"></i>
                                    <h3>Shipping to/from Ghana</h3>
                                    <p>Specialized services for goods moving in and out of Ghana ports (Tema, Takoradi).
                                    </p>
                                </div>
                                <div class="service-card">
                                    <i class="fas fa-file-contract service-icon"></i>
                                    <h3>Customs Clearance</h3>
                                    <p>Hassle-free customs brokerage and documentation.</p>
                                </div>
                                <% } %>
            </div>
        </div>
    </section>
    `}) %>