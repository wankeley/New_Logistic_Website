<%- include('../layout', { body: ` <section style="padding: 2rem 0;">
    <div class="container">
        <div style="display:flex; justify-content:space-between; align-items:center; margin-bottom:2rem;">
            <h1>Manage Services</h1>
            <a href="/admin/dashboard" class="btn btn-outline">Back to Dashboard</a>
        </div>

        <div style="background:white; padding:2rem; border-radius:8px; box-shadow:var(--shadow); margin-bottom:2rem;">
            <h3>Add New Service</h3>
            <form action="/admin/services/add" method="POST" style="margin-top:1rem;">
                <div class="grid-2">
                    <div class="form-group">
                        <label>Title</label>
                        <input type="text" name="title" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label>Image URL (Optional)</label>
                        <input type="text" name="image" class="form-control" placeholder="https://...">
                    </div>
                </div>
                <div class="form-group">
                    <label>Description</label>
                    <textarea name="description" class="form-control" rows="3" required></textarea>
                </div>
                <button type="submit" class="btn">Add Service</button>
            </form>
        </div>

        <div class="grid-3">
            <% if(services && services.length> 0) { %>
                <% services.forEach(service=> { %>
                    <div class="service-card" style="text-align:left; position:relative;">
                        <a href="/admin/services/delete/<%= service.id %>" onclick="return confirm('Are you sure?')"
                            style="position:absolute; top:1rem; right:1rem; color:#ef4444;"><i
                                class="fas fa-trash"></i></a>
                        <h3>
                            <%= service.title %>
                        </h3>
                        <p>
                            <%= service.description %>
                        </p>
                    </div>
                    <% }); %>
                        <% } else { %>
                            <p>No services added yet.</p>
                            <% } %>
        </div>
    </div>
    </section>
    `}) %>