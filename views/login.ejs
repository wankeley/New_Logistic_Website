<%- include('layout', { body: ` <section style="padding: 4rem 0;">
    <div class="container">
        <div
            style="max-width: 400px; margin: 0 auto; background: white; padding: 2rem; border-radius: 8px; box-shadow: var(--shadow);">
            <div class="section-title">
                <h2>Login</h2>
                <p>Access your account</p>
            </div>

            <% if (typeof error !=='undefined' && error) { %>
                <div
                    style="background: #fee2e2; color: #ef4444; padding: 1rem; border-radius: 8px; margin-bottom: 1.5rem; text-align: center;">
                    <%= error %>
                </div>
                <% } %>

                    <form action="/login" method="POST">
                        <div class="form-group">
                            <label>Username</label>
                            <input type="text" name="username" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <input type="password" name="password" class="form-control" required>
                        </div>
                        <button type="submit" class="btn" style="width: 100%">Login</button>
                    </form>
                    <p style="text-align: center; margin-top: 1rem;">
                        Don't have an account? <a href="/register" style="color: var(--primary-color);">Register</a>
                    </p>
        </div>
    </div>
    </section>
    `}) %>