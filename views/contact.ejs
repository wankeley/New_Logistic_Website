<%- include('partials/header') %>

    <!-- Page Hero -->
    <section class="hero-modern" style="min-height: 400px;">
        <div class="hero-gradient"></div>
        <div class="container">
            <div class="hero-modern-content" style="text-align: center;">
                <div class="hero-text" style="max-width: 700px; margin: 0 auto;">
                    <h1 style="margin-bottom: 1rem;">Contact Us</h1>
                    <p style="font-size: 1.1rem; margin-bottom: 3rem; color: rgba(255,255,255,0.9);">Have questions? We're here to help. Reach out to our team today.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Contact Section -->
    <section class="section-padding">
        <div class="container">
            <div class="grid-2" style="gap: 4rem;">
                <!-- Contact Info -->
                <div>
                    <p class="text-primary" style="font-weight: 600; text-transform: uppercase; letter-spacing: 2px; margin-bottom: 0.5rem;">
                        Get In Touch</p>
                    <h2>We'd Love to Hear From You</h2>
                    <p>Whether you have a question about our services, pricing, or anything else, our team is ready to answer all your questions.</p>

                    <div style="margin-top: 2rem;">
                        <div class="flex" style="gap: 1rem; margin-bottom: 1.5rem; align-items: flex-start;">
                            <div class="icon-box" style="width: 50px; height: 50px; flex-shrink: 0; font-size: 1.25rem;">
                                <i class="fas fa-map-marker-alt"></i>
                            </div>
                            <div>
                                <h4 style="margin-bottom: 0.25rem;">Address</h4>
                                <p style="margin: 0; color: var(--text-light);">
                                    <%= settings.address || 'Accra, Ghana' %>
                                </p>
                            </div>
                        </div>

                        <div class="flex" style="gap: 1rem; margin-bottom: 1.5rem; align-items: flex-start;">
                            <div class="icon-box" style="width: 50px; height: 50px; flex-shrink: 0; font-size: 1.25rem;">
                                <i class="fas fa-phone"></i>
                            </div>
                            <div>
                                <h4 style="margin-bottom: 0.25rem;">Phone</h4>
                                <p style="margin: 0; color: var(--text-light);">
                                    <%= settings.contact_phone || '+233 20 000 0000' %>
                                </p>
                            </div>
                        </div>

                        <div class="flex" style="gap: 1rem; align-items: flex-start;">
                            <div class="icon-box" style="width: 50px; height: 50px; flex-shrink: 0; font-size: 1.25rem;">
                                <i class="fas fa-envelope"></i>
                            </div>
                            <div>
                                <h4 style="margin-bottom: 0.25rem;">Email</h4>
                                <p style="margin: 0; color: var(--text-light);">
                                    <%= settings.contact_email || 'info@logistics.com' %>
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="social-links" style="margin-top: 2rem;">
                        <a href="#" style="background: var(--primary-color);"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" style="background: var(--primary-color);"><i class="fab fa-twitter"></i></a>
                        <a href="#" style="background: var(--primary-color);"><i class="fab fa-linkedin-in"></i></a>
                        <a href="#" style="background: var(--primary-color);"><i class="fab fa-instagram"></i></a>
                    </div>
                </div>

                <!-- Contact Form -->
                <div class="card">
                    <h3 style="margin-bottom: 1.5rem;"><i class="fas fa-paper-plane text-primary" style="margin-right: 10px;"></i>Send a Message</h3>

                    <% if (typeof success !=='undefined' && success) { %>
                        <div style="background: #dcfce7; color: #16a34a; padding: 1rem; border-radius: var(--border-radius-sm); margin-bottom: 1.5rem; text-align: center;">
                            <i class="fas fa-check-circle"></i>
                            <%= success %>
                        </div>
                        <% } %>

                            <form action="/contact" method="POST">
                                <div class="form-group">
                                    <label for="name">Full Name</label>
                                    <input type="text" id="name" name="name" class="form-control" placeholder="John Doe" required>
                                </div>
                                <div class="form-group">
                                    <label for="email">Email Address</label>
                                    <input type="email" id="email" name="email" class="form-control" placeholder="john@example.com" required>
                                </div>
                                <div class="form-group">
                                    <label for="subject">Subject</label>
                                    <input type="text" id="subject" name="subject" class="form-control" placeholder="How can we help?" required>
                                </div>
                                <div class="form-group">
                                    <label for="message">Message</label>
                                    <textarea id="message" name="message" class="form-control" rows="5" placeholder="Write your message here..." required style="resize: vertical;"></textarea>
                                </div>
                                <button type="submit" class="btn btn-primary btn-block"><i
                                        class="fas fa-paper-plane"></i> Send Message</button>
                            </form>
                </div>
            </div>
        </div>
    </section>

    <%- include('partials/footer') %>