<%- include('partials/header') %>
    <section class="hero"
        style="padding: 4rem 0; min-height: 40vh; background-image: url('https://source.unsplash.com/1600x900/?phone,contact');">
        <div class="container">
            <h1>Contact Us</h1>
            <p>We're here to help. Get in touch with our team.</p>
        </div>
    </section>

    <section>
        <div class="container">
            <div class="grid-2">
                <div>
                    <div class="section-title" style="text-align:left;">
                        <span>Get In Touch</span>
                        <h2>Have Questions?</h2>
                    </div>
                    <p class="mb-2">Fill out the form below and our team will get back to you within 24 hours.</p>

                    <div style="margin-bottom:2rem;">
                        <div style="display:flex; gap:1rem; margin-bottom:1.5rem;">
                            <div
                                style="width:50px; height:50px; background:var(--primary-color); color:white; display:flex; align-items:center; justify-content:center; border-radius:50%;">
                                <i class="fas fa-map-marker-alt fa-lg"></i>
                            </div>
                            <div>
                                <h4>Visit Us</h4>
                                <p>
                                    <%= settings.address || 'Accra, Ghana' %>
                                </p>
                            </div>
                        </div>
                        <div style="display:flex; gap:1rem; margin-bottom:1.5rem;">
                            <div
                                style="width:50px; height:50px; background:var(--primary-color); color:white; display:flex; align-items:center; justify-content:center; border-radius:50%;">
                                <i class="fas fa-envelope fa-lg"></i>
                            </div>
                            <div>
                                <h4>Email Us</h4>
                                <p>
                                    <%= settings.contact_email || 'info@logistics.com' %>
                                </p>
                            </div>
                        </div>
                        <div style="display:flex; gap:1rem;">
                            <div
                                style="width:50px; height:50px; background:var(--primary-color); color:white; display:flex; align-items:center; justify-content:center; border-radius:50%;">
                                <i class="fas fa-phone fa-lg"></i>
                            </div>
                            <div>
                                <h4>Call Us</h4>
                                <p>
                                    <%= settings.contact_phone || '+233 20 000 0000' %>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="service-card" style="text-align:left;">
                    <form action="/contact" method="POST">
                        <div class="form-group">
                            <label>Your Name</label>
                            <input type="text" name="name" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label>Email Address</label>
                            <input type="email" name="email" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label>Subject</label>
                            <input type="text" name="subject" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label>Message</label>
                            <textarea name="message" class="form-control" rows="5" required></textarea>
                        </div>
                        <button type="submit" class="btn" style="width:100%">Send Message</button>
                    </form>
                </div>
            </div>
        </div>
    </section>
    <%- include('partials/footer') %>