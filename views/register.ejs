<%- include('partials/header') %>
    <section style="padding: 4rem 0;">
        <div class="container">
            <div
                style="max-width: 400px; margin: 0 auto; background: white; padding: 2rem; border-radius: 8px; box-shadow: var(--shadow);">
                <div class="section-title">
                    <h2>Register</h2>
                    <p>Create a new account</p>
                </div>

                <% if (typeof error !=='undefined' && error) { %>
                    <div
                        style="background: #fee2e2; color: #ef4444; padding: 1rem; border-radius: 8px; margin-bottom: 1.5rem; text-align: center;">
                        <%= error %>
                    </div>
                    <% } %>

                        <form action="/register" method="POST">
                            <div class="form-group">
                                <label>Username</label>
                                <input type="text" name="username" class="form-control" required>
                            </div>
                            <div class="form-group">
                                <label>Password</label>
                                <input type="password" name="password" class="form-control" required>
                            </div>
                            <div class="form-group">
                                <label>Confirm Password</label>
                                <input type="password" name="confirm_password" class="form-control" required>
                            </div>
                            <button type="submit" class="btn" style="width: 100%">Register</button>
                        </form>
                        <p style="text-align: center; margin-top: 1rem;">
                            Already have an account? <a href="/login" style="color: var(--primary-color);">Login</a>
                        </p>
            </div>
        </div>
    </section>
    <%- include('partials/footer') %>