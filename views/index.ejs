        <div class="hero-pattern"></div>
        <div class="container">
            <div class="hero-modern-content">
                <div class="hero-text animate-fade-in">
                    <span class="hero-badge"><i class="fas fa-rocket"></i> Trusted by 1000+ Businesses</span>
                    <h1>Global Logistics Simplified</h1>
                    <p>Fast, reliable, and secure freight forwarding solutions connecting Ghana to the world. Real-time tracking, competitive rates, and 24/7 support.</p>
                    <div class="hero-buttons">
                        <a href="/tracking" class="btn btn-primary btn-lg"><i class="fas fa-map-marker-alt"></i> Track Now</a>
                        <a href="/quote" class="btn btn-secondary btn-lg"><i class="fas fa-file-invoice"></i> Get Quote</a>
                    </div>
                </div>
                <div class="hero-visual animate-fade-in" style="animation-delay: 0.2s;">
                    <div class="hero-card">
                        <div class="card-content">
                            <div class="card-stat">
                                <div class="stat-number">50K+</div>
                                <div class="stat-label">Shipments Delivered</div>
                            </div>
                            <div class="card-divider"></div>
                            <div class="card-stat">
                                <div class="stat-number">4.9â˜…</div>
                                <div class="stat-label">Customer Rating</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Quick Tracking Widget Floating -->
    <div class="container">
        <div class="tracking-widget-modern">
            <div class="tracking-header">
                <h3><i class="fas fa-box"></i> Track Your Shipment</h3>
                <p>Enter tracking ID to get real-time updates</p>
            </div>
            <form action="/tracking" method="GET" class="tracking-form-modern">
                <input type="text" name="id" class="form-control" placeholder="TRK-12345" required>
                <button type="submit" class="btn btn-primary"><i class="fas fa-arrow-right"></i></button>
            </form>
        </div>
    </div>

    <!-- Featured Services -->
    <section class="section-padding" style="background: linear-gradient(135deg, #f8fafc 0%, #e8f0f9 100%);">
        <div class="container">
            <div class="section-header">
                <span class="section-badge">Our Services</span>
                <h2>What We Offer</h2>
                <p>Comprehensive logistics solutions tailored to your business needs</p>
            </div>
            <div class="services-showcase">
                <div class="service-item service-item-1">
                    <div class="service-icon">
                        <i class="fas fa-plane"></i>
                    </div>
                    <h3>Air Freight</h3>
                    <p>Fast and reliable air cargo services for time-sensitive shipments. Express delivery available.</p>
                    <a href="/services" class="service-link">Learn More <i class="fas fa-arrow-right"></i></a>
                </div>
                <div class="service-item service-item-2">
                    <div class="service-icon">
                        <i class="fas fa-ship"></i>
                    </div>
                    <h3>Sea Freight</h3>
                    <p>Cost-effective ocean freight with direct routes to major ports worldwide.</p>
                    <a href="/services" class="service-link">Learn More <i class="fas fa-arrow-right"></i></a>
                </div>
                <div class="service-item service-item-3">
                    <div class="service-icon">
                        <i class="fas fa-truck"></i>
                    </div>
                    <h3>Land Transport</h3>
                    <p>Efficient road network covering Ghana and West Africa with door-to-door delivery.</p>
                    <a href="/services" class="service-link">Learn More <i class="fas fa-arrow-right"></i></a>
                </div>
                <div class="service-item service-item-4">
                    <div class="service-icon">
                        <i class="fas fa-warehouse"></i>
                    </div>
                    <h3>Warehousing</h3>
                    <p>Climate-controlled storage facilities with 24/7 security and inventory management.</p>
                    <a href="/services" class="service-link">Learn More <i class="fas fa-arrow-right"></i></a>
                </div>
            </div>
        </div>
    </section>

    <!-- Dynamic Services from CMS -->
    <% if (services && services.length> 0) { %>
        <section class="section-padding" style="background: #f1f5f9;">
            <div class="container">
                <div class="text-center mb-4">
                    <p class="text-primary" style="font-weight: 600; text-transform: uppercase; letter-spacing: 2px; margin-bottom: 0.5rem;">
                        What We Do</p>
                    <h2>Our Core Services</h2>
                </div>
                <div class="grid-3">
                    <% services.forEach(service=> { %>
                        <div class="card hover-card">
                            <% if(service.image) { %>
                                <img src="<%= service.image %>" alt="<%= service.title %>" style="width:100%; height:200px; object-fit:cover; border-radius: var(--border-radius-sm); margin-bottom:1.5rem;">
                                <% } else { %>
                                    <div style="width:100%; height:200px; background: linear-gradient(135deg, #eff6ff, #dbeafe); border-radius: var(--border-radius-sm); margin-bottom:1.5rem; display:flex; align-items:center; justify-content:center;">
                                        <i class="fas fa-box fa-3x" style="color: var(--primary-color);"></i>
                                    </div>
                                    <% } %>
                                        <h3>
                                            <%= service.title %>
                                        </h3>
                                        <p>
                                            <%= service.description %>
                                        </p>
                        </div>
                        <% }); %>
                </div>
                <div class="text-center" style="margin-top: 3rem;">
                    <a href="/services" class="btn btn-secondary"><i class="fas fa-th-large"></i> View All Services</a>
                </div>
            </div>
        </section>
        <% } %>

